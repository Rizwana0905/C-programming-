#include <stdio.h>
#include <string.h>

struct Login
{
    char username[30];
    char password[30];
};

int main()
{
    struct Login l;
    char u[30], p[30];

    printf("Create Username: ");
    scanf("%s", l.username);

    printf("Create Password: ");
    scanf("%s", l.password);

    printf("\n--- Login ---\n");

    printf("Enter Username: ");
    scanf("%s", u);

    printf("Enter Password: ");
    scanf("%s", p);

    if(strcmp(l.username, u) == 0 && strcmp(l.password, p) == 0)
        printf("\nLogin Successful");
    else
        printf("\nInvalid Username or Password");

    return 0;
}
