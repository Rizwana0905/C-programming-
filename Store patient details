#include <stdio.h>

struct Patient
{
    int patientId;
    char name[50];
    int age;
    char gender[10];
    char disease[50];
};

int main()
{
    struct Patient p;

    printf("Enter Patient ID: ");
    scanf("%d", &p.patientId);

    printf("Enter Patient Name: ");
    scanf(" %[^\n]", p.name);

    printf("Enter Age: ");
    scanf("%d", &p.age);

    printf("Enter Gender: ");
    scanf("%s", p.gender);

    printf("Enter Disease: ");
    scanf(" %[^\n]", p.disease);

    printf("\n--- Patient Details ---\n");
    printf("Patient ID : %d\n", p.patientId);
    printf("Name       : %s\n", p.name);
    printf("Age        : %d\n", p.age);
    printf("Gender     : %s\n", p.gender);
    printf("Disease    : %s\n", p.disease);

    return 0;
}
