#include <stdio.h>

struct Book
{
    int bookId;
    char title[50];
    char author[50];
    int quantity;
};

int main()
{
    struct Book b;

    printf("Enter Book ID: ");
    scanf("%d", &b.bookId);

    printf("Enter Book Title: ");
    scanf(" %[^\n]", b.title);

    printf("Enter Author Name: ");
    scanf(" %[^\n]", b.author);

    printf("Enter Quantity: ");
    scanf("%d", &b.quantity);

    printf("\n--- Library Book Details ---\n");
    printf("Book ID   : %d\n", b.bookId);
    printf("Title     : %s\n", b.title);
    printf("Author    : %s\n", b.author);
    printf("Quantity  : %d\n", b.quantity);

    return 0;
}
