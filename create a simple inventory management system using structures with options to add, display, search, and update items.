#include <stdio.h>
#include <string.h>

#define MAX_ITEMS 100

// Structure to store inventory item details
struct Item {
    int id;
    char name[50];
    int quantity;
    float price;
};

// Function prototypes
void addItem(struct Item items[], int *count);
void displayItems(struct Item items[], int count);
void searchItem(struct Item items[], int count);
void updateItem(struct Item items[], int count);

int main() {
    struct Item items[MAX_ITEMS];
    int choice;
    int count = 0;  // Number of items in inventory

    do {
        // Menu
        printf("\n=== Inventory Management System ===\n");
        printf("1. Add Item\n");
        printf("2. Display Items\n");
        printf("3. Search Item by ID\n");
        printf("4. Update Item by ID\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                addItem(items, &count);
                break;
            case 2:
                displayItems(items, count);
                break;
            case 3:
                searchItem(items, count);
                break;
            case 4:
                updateItem(items, count);
                break;
            case 5:
                printf("Exiting program. Goodbye!\n");
                break;
            default:
                printf("Invalid choice! Try again.\n");
        }
    } while(choice != 5);

    return 0;
}

// Function to add a new item
void addItem(struct Item items[], int *count) {
    if (*count >= MAX_ITEMS) {
        printf("Inventory is full! Cannot add more items.\n");
        return;
    }
    printf("\nEnter Item ID: ");
    scanf("%d", &items[*count].id);
    printf("Enter Item Name: ");
    scanf(" %[^\n]s", items[*count].name);  // Read string with spaces
    printf("Enter Quantity: ");
    scanf("%d", &items[*count].quantity);
    printf("Enter Price: ");
    scanf("%f", &items[*count].price);

    (*count)++;
    printf("Item added successfully!\n");
}

// Function to display all items
void displayItems(struct Item items[], int count) {
    if (count == 0) {
        printf("No items in inventory.\n");
        return;
    }

    printf("\nID\tName\t\tQuantity\tPrice\n");
    printf("----------------------------------------------\n");
    for (int i = 0; i < count; i++) {
        printf("%d\t%-15s\t%d\t\t%.2f\n", items[i].id, items[i].name, items[i].quantity, items[i].price);
    }
}

// Function to search an item by ID
void searchItem(struct Item items[], int count) {
    int id;
    printf("\nEnter Item ID to search: ");
    scanf("%d", &id);

    for (int i = 0; i < count; i++) {
        if (items[i].id == id) {
            printf("\nItem Found!\n");
            printf("ID: %d\nName: %s\nQuantity: %d\nPrice: %.2f\n", 
                    items[i].id, items[i].name, items[i].quantity, items[i].price);
            return;
        }
    }
    printf("Item with ID %d not found.\n", id);
}

// Function to update an item by ID
void updateItem(struct Item items[], int count) {
    int id;
    printf("\nEnter Item ID to update: ");
    scanf("%d", &id);

    for (int i = 0; i < count; i++) {
        if (items[i].id == id) {
            printf("Enter new Name: ");
            scanf(" %[^\n]s", items[i].name);
            printf("Enter new Quantity: ");
            scanf("%d", &items[i].quantity);
            printf("Enter new Price: ");
            scanf("%f", &items[i].price);
            printf("Item updated successfully!\n");
            return;
        }
    }
    printf("Item with ID %d not found.\n", id);
}
