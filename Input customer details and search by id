#include <stdio.h>

struct Customer
{
    int customerId;
    char name[50];
    char mobile[15];
};

int main()
{
    struct Customer c[100];
    int n, i, searchId, found = 0;

    printf("Enter number of customers: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
    {
        printf("\nEnter details of Customer %d\n", i + 1);

        printf("Enter Customer ID: ");
        scanf("%d", &c[i].customerId);

        printf("Enter Name: ");
        scanf(" %[^\n]", c[i].name);

        printf("Enter Mobile Number: ");
        scanf("%s", c[i].mobile);
    }

    printf("\nEnter Customer ID to search: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++)
    {
        if(c[i].customerId == searchId)
        {
            printf("\n--- Customer Found ---\n");
            printf("Customer ID : %d\n", c[i].customerId);
            printf("Name        : %s\n", c[i].name);
            printf("Mobile No   : %s\n", c[i].mobile);
            found = 1;
            break;
        }
    }

    if(found == 0)
    {
        printf("\nCustomer not found.");
    }

    return 0;
}
