#include <stdio.h>

int main()
{
    int i;
    float rainfall[7], total = 0, average;

    for(i = 0; i < 7; i++)
    {
        printf("Enter rainfall for day %d: ", i + 1);
        scanf("%f", &rainfall[i]);
        total = total + rainfall[i];
    }

    average = total / 7;

    printf("\nTotal Rainfall = %.2f\n", total);
    printf("Average Rainfall = %.2f", average);

    return 0;
}
