#include <stdio.h>

int main()
{
    float basicSalary, bonusPercentage, bonusAmount, totalSalary;

    printf("Enter basic salary: ");
    scanf("%f", &basicSalary);

    printf("Enter bonus percentage: ");
    scanf("%f", &bonusPercentage);

    bonusAmount = (basicSalary * bonusPercentage) / 100;

    totalSalary = basicSalary + bonusAmount;

    printf("\nBasic Salary: Rs. %.2f", basicSalary);
    printf("\nBonus Amount: Rs. %.2f", bonusAmount);
    printf("\nTotal Salary after Bonus: Rs. %.2f", totalSalary);

    return 0;
}
