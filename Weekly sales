#include <stdio.h>

int main()
{
    int i;
    float sales[7], total = 0;

    for(i = 0; i < 7; i++)
    {
        printf("Enter sales for day %d: ", i + 1);
        scanf("%f", &sales[i]);
        total = total + sales[i];
    }

    printf("\nTotal Weekly Sales = %.2f", total);

    return 0;
}
