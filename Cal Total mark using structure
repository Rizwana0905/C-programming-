#include <stdio.h>

struct Student
{
    int rollNo;
    char name[50];
    int mark1;
    int mark2;
    int mark3;
    int total;
};

int main()
{
    struct Student s;

    printf("Enter Roll Number: ");
    scanf("%d", &s.rollNo);

    printf("Enter Student Name: ");
    scanf(" %[^\n]", s.name);

    printf("Enter Mark 1: ");
    scanf("%d", &s.mark1);

    printf("Enter Mark 2: ");
    scanf("%d", &s.mark2);

    printf("Enter Mark 3: ");
    scanf("%d", &s.mark3);

    s.total = s.mark1 + s.mark2 + s.mark3;

    printf("\n--- Student Mark Details ---\n");
    printf("Roll No   : %d\n", s.rollNo);
    printf("Name      : %s\n", s.name);
    printf("Total Marks: %d\n", s.total);

    return 0;
}
