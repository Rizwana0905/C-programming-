#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int count;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    count = strlen(str);

    if(str[count - 1] == '\n') {
        count--;
    }

    printf("Number of characters: %d\n", count);

    return 0;
}
