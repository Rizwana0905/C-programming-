#include <stdio.h>

void displayMenu() {
    printf("===== MENU =====\n");
    printf("1. Add\n");
    printf("2. Subtract\n");
    printf("3. Multiply\n");
    printf("4. Divide\n");
    printf("5. Exit\n");
    printf("================\n");
}

int main() {
    int choice;

    displayMenu();

    printf("Enter your choice: ");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            printf("You chose Add.\n");
            break;
        case 2:
            printf("You chose Subtract.\n");
            break;
        case 3:
            printf("You chose Multiply.\n");
            break;
        case 4:
            printf("You chose Divide.\n");
            break;
        case 5:
            printf("Exiting program.\n");
            break;
        default:
            printf("Invalid choice.\n");
    }

    return 0;
}
